    "build:prod": "webpack --mode production --output-filename arkitect.[contenthash].min.js",
    "build:dev": "webpack --mode development --output-filename arkitect.js",
    "lint": "eslint . --ignore-path ./.eslintignore"
  },
  "person": {
    "name": "davis90",
